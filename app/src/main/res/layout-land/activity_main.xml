<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="300dp"
            android:layout_height="289dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string body"
                android:visibility="visible"
                app:srcCompat="@drawable/body" />

            <ImageView
                android:id="@+id/Arms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string arms"
                android:visibility="invisible"
                app:srcCompat="@drawable/arms" />

            <ImageView
                android:id="@+id/Ears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string ears"
                android:visibility="invisible"
                app:srcCompat="@drawable/ears" />

            <ImageView
                android:id="@+id/Eyebrows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string eyebrows"
                android:visibility="invisible"
                app:srcCompat="@drawable/eyebrows" />

            <ImageView
                android:id="@+id/Eyes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription='@string "Eyes"'
                android:visibility="invisible"
                app:srcCompat="@drawable/eyes" />

            <ImageView
                android:id="@+id/Glasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription='@string "glasses"'
                android:visibility="invisible"
                app:srcCompat="@drawable/glasses" />

            <ImageView
                android:id="@+id/Hat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription='@string "hat"'
                android:visibility="invisible"
                app:srcCompat="@drawable/hat" />

            <ImageView
                android:id="@+id/Mouth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription='@string "mouth"'
                android:visibility="invisible"
                app:srcCompat="@drawable/mouth" />

            <ImageView
                android:id="@+id/Mustache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription='@string "mustache"'
                android:visibility="invisible"
                app:srcCompat="@drawable/mustache" />

            <ImageView
                android:id="@+id/Nose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription='@string "nose"'
                android:visibility="invisible"
                app:srcCompat="@drawable/nose" />

            <ImageView
                android:id="@+id/Shoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription='@string "Shoes"'
                android:visibility="invisible"
                app:srcCompat="@drawable/shoes" />

        </FrameLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_marginStart="431dp"
            android:layout_marginTop="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CheckBox
                android:id="@+id/checkBox12"
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Arms"
                tools:text="Arms" />

            <CheckBox
                android:id="@+id/checkBox13"
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Eyebrows"
                app:layout_column="0"
                app:layout_row="2"
                tools:text="Eyebrows" />

            <CheckBox
                android:id="@+id/checkBox14"
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Ears"
                app:layout_column="0"
                app:layout_row="1"
                tools:text="Ears" />

            <CheckBox
                android:id="@+id/checkBox15"
                android:layout_width="139dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Eyes"
                app:layout_column="0"
                app:layout_row="3"
                tools:text="Eyes" />

            <CheckBox
                android:id="@+id/checkBox16"
                android:layout_width="142dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Glasses"
                app:layout_column="0"
                app:layout_row="4"
                tools:text="Glasses" />

            <CheckBox
                android:id="@+id/checkBox17"
                android:layout_width="241dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Hat"
                app:layout_column="5"
                app:layout_row="0"
                tools:text="Hat" />

            <CheckBox
                android:id="@+id/checkBox18"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Mouth"
                app:layout_column="5"
                app:layout_row="1"
                tools:text="Mouth" />

            <CheckBox
                android:id="@+id/checkBox19"
                android:layout_width="177dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Mustache"
                app:layout_column="5"
                app:layout_row="2"
                tools:text="Mustache" />

            <CheckBox
                android:id="@+id/checkBox20"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Nose"
                app:layout_column="5"
                app:layout_row="3"
                tools:text="Nose" />

            <CheckBox
                android:id="@+id/checkBox21"
                android:layout_width="186dp"
                android:layout_height="40dp"
                android:onClick="checkClicked"
                android:text="Shoes"
                app:layout_column="5"
                app:layout_row="4"
                tools:text="Shoes" />
        </android.support.v7.widget.GridLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>